- if notice
	%p{ :id => "notice"} 
		= "#{notice}"

%h1 Your Pragmatic Catalog 

%ul{ :id => 'productList'}
	- @products.each do |product|
		%li
			#{link_to image_tag(product.image_url, alt: product.title ), product}
				
			%h3{ :class => "title"} #{product.title}
			#{sanitize(product.description)}
			.price_line
				#{number_to_currency(product.price)}
